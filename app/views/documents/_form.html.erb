<%= form_with(model: @document, local: true) do |form| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.messages.not_saved', count: @document.errors.count, resource: t('activerecord.models.document')) %></h2>
      <ul>
        <% @document.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.file_field :file, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit t('actions.upload'), class: 'btn btn-success' %>
  </div>
<% end %>
