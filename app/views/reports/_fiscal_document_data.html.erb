
<% if @report_data.present? %>
  <p><%= t('views.report_details.series_number') %>: <%= @report_data[:numero_serie] %></p>
  <p><%= t('views.report_details.invoice_number') %>: <%= @report_data[:numero_nf] %></p>
  <p><%= t('views.report_details.issue_date_and_time') %>: <%= @report_data[:data_hora_emissao]&.strftime(t('time.formats.default')) %></p>
  <p><%= t('views.report_details.emitter_name') %>: <%= @report_data.dig(:emitente, :nome) %></p>
  <p><%= t('views.report_details.emitter_cnpj') %>: <%= @report_data.dig(:emitente, :cnpj) %></p>
  <p><%= t('views.report_details.recipient_name') %>: <%= @report_data.dig(:destinatario, :nome) %></p>
  <p><%= t('views.report_details.recipient_cnpj') %>: <%= @report_data.dig(:destinatario, :cnpj) %></p>
<% else %>
  <p>No report data available.</p>
<% end %>